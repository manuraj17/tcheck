{
  "manifest_version": 2,
  "name": "Rails translation checker",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["jquery-3.3.1.slim.min.js", "content.js"]
    }
  ],
  "permissions": ["storage", "activeTab"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  }
}

